<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <sql> 태그 사용하기 => 자주 사용되는 SQL문은 별도로 정의해두고 포함한다. -->

<mapper namespace="java63.web03.dao.BoardDao">

	<!-- 객체의 컬럼과 프로퍼티를 연결한다. -->
	<resultMap type="Board" id="boardMap">
		<!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
		<id column="BNO" property="boardNo" />
		<result column="UNO" property="userNo" />
		<result column="PNO" property="productNo" />
		<result column="IFLIKE" property="ifLike" />
		<result column="TITLE" property="title" />
		<result column="CONTENT" property="content" />
		<result column="BDATE" property="date" />
		<result column="COUNT" property="count" />
		<result column="RECO" property="recommend" />
		<result column="IMG" property="imgUrl" />
	</resultMap>

	<!-- <resultMap type="BoardListItem" id="boardListItemMap">
		PK 컬럼은 id 태그를 사용하여 지정한다.
		<id column="BNO" property="boardNo" />
    <result column="UNO" property="userNo" />
    <result column="PNO" property="productNo" />
    <result column="IFLIKE" property="ifLike" />
    <result column="TITLE" property="title" />
    <result column="CONTENT" property="content" />
    <result column="BDATE" property="date" />
    <result column="COUNT" property="count" />
    <result column="RECO" property="recommend" />
    <result column="IMG" property="imgUrl" />
	</resultMap> -->

	<resultMap type="map" id="boardListItem2Map">
		<id column="BNO" property="boardNo" />
    <result column="UNO" property="userNo" />
    <result column="PNO" property="productNo" />
    <result column="IFLIKE" property="ifLike" />
    <result column="TITLE" property="title" />
    <result column="CONTENT" property="content" />
    <result column="BDATE" property="date" />
    <result column="COUNT" property="count" />
    <result column="RECO" property="recommend" />
    <result column="IMG" property="imgUrl" />
	</resultMap>	
 
	<sql id="boardSelect">
		SELECT BNO, UNO, PNO, IFLIKE, TITLE, CONTENT, BDATE, COUNT, RECO, IMG   
		FROM BOARD
	</sql>

<select id="selectList" parameterType="map" resultMap="boardListItem2Map">
		<include refid="boardSelect" />
		<if test="pageSize > 0">
			limit #{startIndex}, #{pageSize}
		</if>
	</select> 

	<select id="selectOne" parameterType="int" resultMap="boardMap">
		<include refid="boardSelect" />
		WHERE BNO=#{value}
	</select>

	<insert id="insert" parameterType="Board" useGeneratedKeys="true"
		keyColumn="PNO" keyProperty="no">
		INSERT INTO BOARD(UNO, PNO, IFLIKE, TITLE, CONTENT, BDATE, COUNT, RECO, IMG)
		VALUES (#{userNo}, #{productNo}, #{ifLike}, #{title}, #{content}, #{date}, #{count}, #{recommend}, #{imgUrl})
	</insert>

	<update id="update" parameterType="Board">
		UPDATE PRODUCTS SET
		UNO=#{userNo}, 
		PNO=#{productNo}, 
		IFLIKE=#{ifLike}, 
		TITLE=#{title}, 
		CONTENT=#{content}, 
		BDATE=#{date}, 
		COUNT=#{count}, 
		RECO=#{recommend}, 
		IMG=#{imgUrl}		
		WHERE BNO=#{value}
	</update>

	<delete id="delete" parameterType="int">
		DELETE FROM BOARD WHERE WHERE BNO=#{value}
	</delete>

</mapper>



















